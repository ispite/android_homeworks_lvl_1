<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="4dp"
    android:paddingHorizontal="4dp">

    <ImageView
        android:id="@+id/posterMovie"
        android:layout_width="78dp"
        android:layout_height="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Star Wars: Episode IV - A New Hope" />

    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        tools:text="1977" />

    <TextView
        android:id="@+id/ageRatingMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/yearTextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="PG-13"
        />

    <TextView
        android:id="@+id/genreMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/yearTextView"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        tools:text="Фантастика"
        />

    <TextView
        android:id="@+id/typeMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/genreMovie"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        tools:text=""
        />

    <TextView
        android:id="@+id/linkToPosterMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/genreMovie"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="https://m.media-amazon.com/images/M/MV5BMTczNTI2ODUwOF5BMl5BanBnXkFtZTcwMTU0NTIzMw@@._V1_SX300.jpg"
        />

    <TextView
        android:id="@+id/scoresMovie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/linkToPosterMovie"
        app:layout_constraintStart_toEndOf="@id/posterMovie"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="[Score(source=Internet Movie Database, value=7.9/10), Score(source=Rotten Tomatoes, value=94%), Score(source=Metacritic, value=79/100)]"
        />

</androidx.constraintlayout.widget.ConstraintLayout>